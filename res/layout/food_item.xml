<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/footdata_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp"
	        android:text="@string/name_fire" />
	   	<TextView 
	   	    android:id="@+id/footdata_calorie"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp" />
	   	<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp"
	        android:text="@string/name_caloriename" />"
	   	<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp"
	        android:text="/" />
	   	<TextView 
	   	    android:id="@+id/footdata_unit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp" />
	   	<TextView 
	   	    android:id="@+id/footdata_unitname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#d3d3d3"
	        android:textSize="12sp" />
	</LinearLayout>
	<TextView 
   	    android:id="@+id/footdata_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#d3d3d3"
        android:textSize="15sp" />
</LinearLayout>