<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background" >
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#70000000"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="10dp"
    	android:layout_marginRight="10dp">
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true"
    		android:textColor="#ffffff"
    		android:textSize="35sp"
    		android:text="@string/about_caption" />"
        <ImageButton
            android:id="@+id/about_back"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:background="#00000000"
    		android:layout_centerVertical="true"
    		android:padding="10dp"
    		android:src="@drawable/icon_back"/>
    </RelativeLayout>
    <ScrollView 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:background="#70000000"
    	android:cacheColorHint="#00000000"
    	android:layout_margin="10dp"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
		android:scrollbars="none">
		<LinearLayout 
		    android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
			android:scrollbars="none"
			android:orientation="vertical">
	        <LinearLayout
	            android:layout_width="fill_parent"
	    		android:layout_height="wrap_content">
	            <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#cccccc"
	    		android:textSize="25sp"
	    		android:text="作者：" />
	            <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#ffffff"
	    		android:textSize="25sp"
	    		android:text="翟宵静" />
	        </LinearLayout>"
		    <LinearLayout
	            android:layout_width="fill_parent"
	    		android:layout_height="wrap_content">
	            <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#cccccc"
	    		android:textSize="25sp"
	    		android:text="QQ：" />
	            <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#ffffff"
	    		android:textSize="25sp"
	    		android:text="123456789" />
	        </LinearLayout>
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#ffffff"
	    		android:textSize="20sp"
	    		android:text="软件介绍" />
	        <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textColor="#ffffff"
	    		android:textSize="15sp"
	    		android:text="本软件主要是为了记录大家每日所消耗的卡路里而设计，软件从开机即开始记录，并在每日生产卡路里消耗日志，无需手动干预，让我们可以观察每日消耗的卡路里数，便于大家了解自己的身体情况并根据数据安排相应的运动方式，同时软件还自带了很多工具，如身高体重计算、食物卡路里查询、减肥图片等等。软件将在后续开发版本中添加更多内容，如有好的建议，请与我联系。" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>